{
    "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedVariables": "error"
            },
            "style": {
                "noNonNullAssertion": "off",
                "useConst": "error",
                "useSingleVarDeclarator": "error"
            },
            "complexity": {
                "noExcessiveCognitiveComplexity": "warn",
                "noVoid": "off",
                "useArrowFunction": "error"
            },
            "suspicious": {
                "noArrayIndexKey": "warn",
                "noConsole": "error"
            }
        }
    },
    "overrides": [
        {
            "includes": ["src/logger.js"],
            "linter": {
                "rules": {
                    "suspicious": {
                        "noConsole": "off"
                    }
                }
            }
        }
    ],
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "jsxQuoteStyle": "double",
            "semicolons": "asNeeded",
            "arrowParentheses": "asNeeded",
            "bracketSpacing": true,
            "bracketSameLine": false,
            "trailingCommas": "es5"
        },
        "globals": ["console", "window", "document", "localStorage", "alert", "confirm"]
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    }
}
